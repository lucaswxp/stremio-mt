{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "declaration": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": false
  },
  "allowJs": true,
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "assets"
  ]
}